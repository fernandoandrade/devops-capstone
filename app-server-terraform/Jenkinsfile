pipeline {
    agent any
    stages {
        stage('Set AWS Credentials') {
            steps {
                sh 'cp /home/ubuntu/variables.tf ./app-server-terraform/'
                echo 'AWS credentials set.'                
            }
        }
        stage('Build Infra App') {
            steps {
                sh 'cd app-server-terraform'
                sh 'terraform init'
                sh 'terraform plan'
                sh 'terraform apply'
                echo 'App infra built'             
            }
        }
    }
}
